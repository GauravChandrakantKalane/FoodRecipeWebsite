<% if(currentRecipe != null) {%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= currentRecipe.name %>
    </li>
  </ol>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/uploads/<%= currentRecipe.image %>"
      loading=" lazy"
      style="top: 20px"
      class="img-fluid sticky-top"
      alt="<%= currentRecipe.name %>"
    />
  </div>

  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12">
        <h1><%= currentRecipe.name %></h1>
      </div>
      <div class="col-12 mb-4">
        <i class="bi bi-tag"></i> <%=currentRecipe.category %>
      </div>
      <div class="col-12" style="white-space: pre-line">
        <h4>Cooking Instructions</h4>
        <%= currentRecipe.description%>
      </div>
    </div>

    <div class="row pt-4">
      <div class="col-12">
        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% currentRecipe.ingredients.forEach((ingredient, index)=>{ %>

          <li class="list-group-item"><%= ingredient %></li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div class="col-12">
      <p class="text-center text-secondary mt-5">
        Mail to Creator:
        <a class="ms-2" href="mailto:<%= currentRecipe.email %>"
          ><%= currentRecipe.email %></a
        >
      </p>
    </div>
  </div>
</div>
<%} else{ %>
<p>No Item Found</p>

<% } %>
