<div class="row flex-lg-row-reverse align-items-center g-5 py mb-4">
  <div class="col-12 col-lg-6">
    <img
      src="/img/hero-image.png"
      width="607"
      height="510"
      class="d-block mx-lg-auto img-fluid"
      loading="lazy"
      alt="hero"
    />
  </div>

  <div class="col-12 col-lg-6">
    <H1 class="display-5 fw bold mb-3">
      Huge Selection of delicious recipe ideas
    </H1>
    <p class="lead">
      Explore our huge selection of delicious recipe ideas including; easy
      desserts, delicious vegan and vegetarian dinner ideas, gorgeous pasta
      recipe, quick bakes, family-friendly meals and gluten-free recipes.
    </p>
    <% if(locals.user) {%>
    <div class="d-gird gap-2 d-md-flex justify-content-md-start">
      <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg me-md-2"
        >Explore Latest</a
      >
      <a href="/explore-random" class="btn btn-outline-secondary btn-lg me-md-2"
        >Show Random</a
      >
      <%} else{ %>
      <div class="d-gird gap-2 d-md-flex justify-content-md-start">
        <a href="/signup" class="btn btn-primary btn-dark btn-lg me-md-2"
          >SignUp</a
        >
        <a href="/login" class="btn btn-outline-secondary btn-lg me-md-2"
          >Login</a
        >
        <%}%>
      </div>
    </div>
  </div>

  <!-- Categories Start -->

  <div class="d-flex mb-2 align-items-center">
    <h2>Categories</h2>
  </div>
  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(typeof categories !== 'undefined' && categories.length>0) {%> <%
    categories.forEach((category,index)=>{ %>
    <a
      href="/categories/<%= category.name %>"
      class="col text-center category__link"
    >
      <div class="category__img shadow">
        <img
          src="/img/<%= category.image %>"
          alt="<%- category.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= category.name %></div>
    </a>
    <% }) %> <% } %>

    <a href="/categories" class="col text-center category__link">
      <div class="category__img shadow">
        <img src="/img/view-all.jpg" alt="View All" loading="lazy" />
      </div>
      <div class="pt-1">View All</div>
    </a>
  </div>

  <!-- Categories End -->

  <!-- Latest Start -->

  <section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>Latest Recipes</h2>
      <a href="/explore-latest" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(food != ''){ %> <% food.latestrecipe.forEach(function(recipe,
      index){ %>
      <a
        href="/recipe/<%= recipe._id %>"
        class="col text-center category__link"
      >
        <div class="category__img category__img--lg shadow">
          <img
            src="/uploads/<%= recipe.image %>"
            alt="<%= recipe.name %>"
            loading="lazy"
          />
        </div>
        <div class="pt-1"><%= recipe.name %></div>
      </a>
      <% }) %> <% } %>
    </div>
  </section>

  <!-- Latest End -->

  <!-- Your Recipes Start -->

  <% if(locals.user && locals.user.recipes.length!=0) { %>
  <section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>Your Recipes</h2>
      <a href="/usersRecipe" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(locals.user.recipes.length != 0){ %> <%
      locals.user.recipes.forEach(function(recipe, index){ %>
      <a
        href="/recipe/<%= recipe._id %>"
        class="col text-center category__link"
      >
        <div class="category__img category__img--lg shadow">
          <img
            src="/uploads/<%= recipe.image %>"
            alt="<%= recipe.name %>"
            loading="lazy"
          />
        </div>
        <div class="pt-1"><%= recipe.name %></div>
      </a>
      <% }) %> <% } %>
    </div>
  </section>

  <%} %>

  <!-- Your Recipes End -->

  <!-- Submit Start -->

  <section class="px-4 py-5 my-5 text-center">
    <img
      src="/img/publish-recipe.png"
      width="556"
      height="208"
      loading="lazy"
      alt="publish-recipe"
      class="d-block mx-auto mb-4 img-fluid"
    />
    <h1 class="display-5 fw-bold">Publish Your Recipe For Free Today</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">
        Publish your Recipe in front of thousands of people for free.
      </p>
      <div class="d-gird gap-2 d-sm-flex justify-content-sm-center">
        <a href="/submit-recipe" class="btn btn-primary btn-dark btn-lg"
          >Submit Recipe</a
        >
      </div>
    </div>
  </section>

  <!-- Submit End -->
</div>
