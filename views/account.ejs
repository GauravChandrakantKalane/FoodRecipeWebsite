<div class="col-12">
  <h1 class="text-center mb-5" style="text-decoration: underline">
    Account Info
  </h1>
  <div class="col-8 mx-auto">
    <h4 class="text-center"><%= locals.user.name %></h4>
    <img
      width="250px"
      height="250px"
      src="/user-img/<%= locals.user.image %>"
      alt="<%= locals.user.name %>"
      class="img-thumbnail img-circle mx-auto d-block mt-5"
    />

    <a
      type="button"
      class="btn btn-outline-secondary text-center col-2 mx-auto d-block mt-3 mb-4 logoutBtn"
      href="/logout"
    >
      Logout
    </a>
  </div>
  <hr />
  <h2 class="mb-4 mt-4">Your Recipes</h2>
  <div class="row row-cols-1 row-cols-lg-5 g-2 g-lg-3 mb-4">
    <% if(typeof recipes !== 'undefined' && recipes.length>0) {%> <%
    recipes.forEach((recipe,index)=>{ %>
    <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
      <div class="category__img shadow">
        <img
          src="/uploads/<%= recipe.image %>"
          alt="<%= recipe.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%- recipe.name %></div>
    </a>

    <a
      style="
        display: block;
        width: 50px;
        height: 30px;
        text-align: start;
        font-size: 0.7rem;
      "
      type="button"
      class="btn btn-danger btn-sm deleteBtn"
      href="/delete/<%=recipe._id%>"
      >Delete</a
    >
    <% }) %> <% } %>
  </div>
</div>
